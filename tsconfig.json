{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["esnext.array", "esnext", "es2017", "dom"],
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2017",
    "module": "es2015",
    "jsx": "react",
    "allowJs": true,
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
